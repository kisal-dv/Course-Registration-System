    <Label graphicTextGap="7.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Course Registration System" />
    <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="298.0" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
